.dimmable
  position: relative
  
.dimmer
  display: none
  position: fixed
  top: 0 !important
  left: 0 !important
  width: 100%
  height: 100%
  text-align: center
  vertical-align: middle
  background-color: rgba(0, 0, 0, 0.65)
  opacity: 0
  line-height: 1
  animation-fill-mode: both
  animation-duration: 0.5s
  transition: background-color 0.5s linear
  user-select: none
  will-change: opacity
  z-index: zindex-dimmer
  overflow: hidden
  
  &.scrolling
    overflow: auto
  
  &.content
    width: 100%
    height: 100%
    display: table
    user-select: text
    
    & > *
      display: table-cell
      vertical: middle
      color: white
      
.animating.dimmable:not(body),
.dimmed.dimmable:not(body)
  overflow: hidden
    
.dimmed.dimmable > .animating.dimmer,
.dimmed.dimmable > .visible.dimmer,
.active, dimmer
  display: block
  opacity: 1
  
.disabled.dimmer
  width: 0 !important
  height: 0 !important