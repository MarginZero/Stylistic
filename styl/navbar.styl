.navbar
  position: relative
  background-color: gray-lightest
  padding: navbar-padding-vertical navbar-padding-horizontal
  clearfix()
  +media-breakpoint-up(sm)
    border-radius()

.navbar-full
  border-radius(0)

.navbar-divider
  float: left
  width: 1px
  padding-top: .425rem
  padding-bottom: .425rem
  margin-right: navbar-padding-horizontal
  margin-left:  navbar-padding-horizontal
  overflow: hidden

  &::before
    content: "\00a0"

.navbar-logo
  float: left
  padding-top: (navbar-padding-vertical / 2)
  padding-bottom: (navbar-padding-vertical / 2)
  margin-right: 1rem
  font-size: font-size-lg
  color: navbar-light-logo-color

  .logo-accent
    color:transparentify(navbar-light-logo-color, 40%)

  > img
    display: block

.navbar-default
  .nav-link
    float: left
    display: block
    padding-top: .425rem
    padding-bottom: .425rem
    color: lighten(link-color, 25%)

    + .nav-link
      margin-left: 1rem

  .navbar-nav
    &.nav-right
      pull-right()

    .navbar-divider
      background-color: rgba(0,0,0,.075);

.navbar-default
  .navbar-nav
    .nav-link
      color: navbar-light-color

      &:hover
        color: navbar-light-hover-color

  .open > .nav-link,
  .active > .nav-link,
  .nav-link.open,
  .nav-link.active
    color: navbar-light-active-color
