@font-face {
  font-family: "stylfont";
  src: url('../fonts/stylfont.eot');
  src: url('../fonts/stylfont.eot?#iefix') format('eot'),
          url('../fonts/stylfont.woff') format('woff'),
          url('../fonts/stylfont.ttf') format('truetype');
}

icon-base() {
  font: normal normal 1em/1 stylfont
  text-rendering: auto
  display: inline-block
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
  font-style: normal
  font-variant: normal
  font-weight: normal
  vertical-align: sub
  // speak: none; // only necessary if not using the private unicode range (firstGlyph option)
}

icon-char($filename) {
  $char = ""
  
  if $filename == adjust {
    $char = "\f101"
  }
  
  if $filename == alarm-o {
    $char = "\f102"
  }
  
  if $filename == alarm-slash-o {
    $char = "\f103"
  }
  
  if $filename == alarm-slash {
    $char = "\f104"
  }
  
  if $filename == alarm {
    $char = "\f105"
  }
  
  if $filename == asterisk {
    $char = "\f106"
  }
  
  if $filename == at {
    $char = "\f107"
  }
  
  if $filename == battery-empty {
    $char = "\f108"
  }
  
  if $filename == battery-full {
    $char = "\f109"
  }
  
  if $filename == battery-half {
    $char = "\f10a"
  }
  
  if $filename == battery-o {
    $char = "\f10b"
  }
  
  if $filename == battery-quarter {
    $char = "\f10c"
  }
  
  if $filename == battery-three-quarters {
    $char = "\f10d"
  }
  
  if $filename == battery {
    $char = "\f10e"
  }
  
  if $filename == chevron-down {
    $char = "\f10f"
  }
  
  if $filename == chevron-left {
    $char = "\f110"
  }
  
  if $filename == chevron-right {
    $char = "\f111"
  }
  
  if $filename == chevron-up {
    $char = "\f112"
  }
  
  if $filename == circle-notched {
    $char = "\f113"
  }
  
  if $filename == circle-o {
    $char = "\f114"
  }
  
  if $filename == circle-thin {
    $char = "\f115"
  }
  
  if $filename == circle {
    $char = "\f116"
  }
  
  if $filename == code {
    $char = "\f117"
  }
  
  if $filename == comment-o {
    $char = "\f118"
  }
  
  if $filename == comment {
    $char = "\f119"
  }
  
  if $filename == comments-o {
    $char = "\f11a"
  }
  
  if $filename == comments {
    $char = "\f11b"
  }
  
  if $filename == heart {
    $char = "\f11c"
  }
  
  return $char
}

make-icon($fileName, $insert = 'before', $extend = true) {
  &:{$insert} {
    if $extend {
      icon-base()
    }
    content: icon-char($fileName)
  }
}

