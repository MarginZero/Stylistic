.dropdown
  cursor: pointer
  position: relative
  display: inline-block
  outline: none
  text-align: left
  // transition: some-transition
  
  tap-highlight-color: rgba(0, 0, 0, 0) 
  
  .dropdown-menu
    cursor: auto
    position: absolute
    display: none
    outline: none
    top: 100%
    min-width: max-content
    transition: dropdown-menu-transition // TODO: Add this to variables.styl
    
    margin: 0
    padding: dropdown-menu-padding // TODO: Add this to variables.styl
    background: dropdown-bg
    
    font-size: dropdown-menu-font-size // TODO: Add this to variables.styl
    text-shadow: none
    text-align: left
    
    box-shadow: dropdown-menu-box-shadow // TODO: Add this to variables.styl
    border: dropdown-menu-border // TODO: Add this to variables.styl
    border-radius: dropdown-menu-border-radius // TODO: Add this to variables.styl
    z-index: zindex-dropdown
    will-change: transform, opacity
    
    & > *
      white-space: no-wrap
      
  input:not(.search):first-child,
  select
    display: none !important
    
.dropdown > .dropdown-toggle
  position: relative
  width: auto
  font-size: dropdown-toggle-font-size // TODO: Add this to variables.styl
  margin: dropdown-toggle-margin // TODO: Add this to variables.styl
    
// TODO: Icon styles for inside the dropdown-menu
  
