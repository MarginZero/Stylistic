/*--------------------
  SELECTION DROPDOWN
 --------------------*/
 
 .selection-dropdown
   cursor: pointer
   word-wrap: break-word
   line-height: 1rem
   white-space: normal
   outline: 0
   transform: rotateZ(0deg)
   
   min-width: selection-dropdown-min-width // TODO: Add this to variables.styl
   min-height: selection-dropdown-min-height // TODO: Add this to variables.styl
   
   background: selection-dropdown-bg // TODO: Add this to variables.styl
   display: selection-dropdown-display // TODO: Add this to variables.styl
   padding: selection-dropdown-padding // TODO: Add this to variables.styl
   color: selection-dropdown-color // TODO: Add this to variables.styl
   box-shadow: selection-dropdown-box-shadow // TODO: Add this to variables.styl
   border: selection-dropdown-border // TODO: Add this to variables.styl
   border-radius: selection-dropdown-border-radius // TODO: Add this to variables.styl
   transition: selection-dropdown-transition // TODO: Add this to variables.styl
   
   &.compact
     min-width: 0
     
   .dropdown-menu
     overflow-x: hidden
     overflow-y: auto
     backface-visibility: hidden
     overflow-scrolling: touch
     border-top-width: 0 !important
     width: auto
     outline: none
     margin: (0px - dropdown-menu-border-width) // TODO: Add this to variables.styl
     min-width: dropdown-menu-min-width // TODO: Add this to variables.styl
     width: dropdown-menu-min-width // TODO: Add this to variables.styl
     
     &::after, &::before
       display: none
   
select.selection-dropdown {
  height: selection-dropdown-height;
  padding: selection-dropdown-padding;
  border: selection-dropdown-border;
}

