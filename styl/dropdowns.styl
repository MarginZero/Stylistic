  line-height: dropdown-menu-item-line-height // TODO: Add this to variables.styl
  font-size: dropdown-menu-item-font-size // TODO: Add this to variables.styl
  color: dropdown-menu-item-color // TODO: Add this to variables.styl

  padding: dropdown-menu-item-padding // TODO: Add this to variables.styl
  text-transform: dropdown-menu-item-text-transform // TODO: Add this to variables.styl
  font-weight: dropdown-menu-item-font-weight // TODO: Add this to variables.styl
  box-shadow: dropdown-menu-item-box-shadow // TODO: Add this to variables.styl
  touch-callout: none // TODO: Add this to variables.styl
  
  &:first-child
    border-top-width: 0
    
