  position: relative
  cursor: pointer
  display: block
  border: dropdown-menu-item-border // TODO: Add this to variables.styl
  height: dropdown-menu-item-height // TODO: Add this to variables.styl
  text-align: dropdown-menu-item-text-align // TODO: Add this to variables.styl
  
