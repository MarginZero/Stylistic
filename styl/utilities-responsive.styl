for bp in map-keys(grid-breakpoints)
  .hidden-{bp}-up
    +media-breakpoint-up(bp)
      display: none !important

  .hidden-{bp}-down
    +media-breakpoint-down(bp)
      display: none !important

  .hidden-{bp}-only
    +media-breakpoint-only(bp)
      display: none !important

  .block-{bp}-up
    +media-breakpoint-up(bp)
      display: block !important
    width: 100% !important

  .hblock-{bp}-down
    +media-breakpoint-down(bp)
      display: block !important
    width: 100% !important

  .block-{bp}-only
    +media-breakpoint-only(bp)
      display: block !important
    width: 100% !important


