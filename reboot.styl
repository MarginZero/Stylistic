html
  box-sizing: border-box

*, *::before, *::after
  box-sizing: inherit

/
  @-moz-viewport      { width: device-width; }
  @-ms-viewport       { width: device-width; }
  @-o-viewport        { width: device-width; }
  @-webkit-viewport   { width: device-width; }
  @viewport           { width: device-width; }

// Resets for HTML and BODY

html
  font-size: font-size-base
  -webkit-tap-highlight-color: rgba(0,0,0,0)

body
  background-color: body-bg
  color: body-color
  font-family: font-family-base
  font-size: font-size-base
  line-height: line-height

[tabindex="-1"]:focus {
  outline: none !important
}

// Typography

h1, h2, h3, h4, h5, h6
  margin-top: 0;
  margin-bottom: .5rem;

p
  margin-top: 0
  margin-bottom: 1rem

abbr[title]
  cursor: help
  border-bottom: 1px dotted

address
  margin-bottom: 1rem
  font-style: normal
  line-height: inherit

ol, ul, dl
  margin-bottom: 0

ol ol,
ul ul,
ol ul,
ul ol
  margin-bottom: 0

dt
  font-weight: TODO

dd
  margin-bottom: .5rem
  margin-left: 0

blockquote
  margin: 0 0 1rem

